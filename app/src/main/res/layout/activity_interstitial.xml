<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_interstitial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientatio="vertical">

    <Button
        android:id="@+id/button_load_interstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="loadInterstitial"
        android:text="@string/load_interstitial"/>

    <Button
        android:id="@+id/button_show_interstitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_load_interstitial"
        android:onClick="showInterstitial"/>

</RelativeLayout>